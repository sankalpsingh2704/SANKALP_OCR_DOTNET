<style>
     html, body, .container-table {
    height: 100%;
}
    .container-table {
    display: table;
      height: 100%;
      margin-top:10%;
}
.vertical-center-row {
    display: table-cell;
    vertical-align: middle;
}

</style>
</head>

<body class="hold-transition skin-blue sidebar-mini">

    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="index2.html" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>IQ</b>i</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>IQ</b>invoice</span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Messages: style can be found in dropdown.less-->
                        <li class="dropdown messages-menu">

                        </li>
                        <!-- Notifications: style can be found in dropdown.less -->
                        <li class="dropdown notifications-menu">
                        </li>
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                        </li>
                        <!-- Control Sidebar Toggle Button -->
                    </ul>
                </div>
            </nav>
        </header>
            <!-- MAIN CONTENT -->
        <div class="container container-table">
            <div class="row vertical-center-row">
                <div class="col-md-8 form-horizontal">
                    <div class="panel panel-info col-lg-offset-4">
                        <div class="panel-heading">
                            <span class="widget-icon"> <i class="fa-lg fa fa-lock"></i></span>
                            &nbsp;&nbsp;<b>LOGIN</b>
                        </div>
                        <div class="panel-body">
                            <h5>Welcome to IQ Invoice, please login.</h5>
                            <div class="row">                            
                                @if (@ViewBag.msg != null) {
                                <div class="col-lg-12">
                                    <div class="alert alert-info alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                        <center>@ViewBag.msg</center>
                                    </div>
                                </div>
                                }
                            </div>
                            <section id="loginForm">
                                <div class="col-lg-12">
                                    <div class="well no-padding" id="divLogin">
                                        <div class="row">&nbsp;</div>
                                        @using (Html.BeginForm("Submit", "Login", FormMethod.Post, new { @class = "smart-form client-form" }))
                                        {
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <label class="col-md-4 control-label">Username</label>
                                                    <label class="input col-md-8">
                                                        <i class="icon-append fa fa-user"></i>
                                                        <input type="text" name="email" maxlength="50" class="form-control">
                                                        <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Username </b>
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <label class="col-md-4 control-label">Password</label>
                                                    <label class="input col-md-8">
                                                        <i class="icon-append fa fa-lock left"></i>
                                                        <input type="password" name="password" maxlength="255" class="form-control left">
                                                        <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Password</b>
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="row">&nbsp;</div>
                                                <div class="row">
                                                    @*<div class="col-md-8 col-md-offset-4">
                                                            <a href="@Url.Action("forgotpasswordview", "Forgotpassword")">Forgot Password?</a>
                                                        </div>*@
                                                    <div class="col-md-12">
                                                        <label class="col-md-4"></label>
                                                        <section class="col-md-8">
                                                            <input type="hidden" value="@ViewBag.InvoiceId" id="hdnInvoiceID" name="hdnInvoiceID" />
                                                            <button type="submit" class="btn btn-primary col-md-6">
                                                                LOGIN
                                                            </button>
                                                        </section>
                                                    </div>
                                                </div>
                                                <div class="row">&nbsp;</div>

                                }

                            </div>
                        </div>

                            </section>
                            </div>
                        </div>
                </div>
            </div>
            <!-- PAGE FOOTER -->
        </div>
        <div class="page-footer">
        </div>
            </div>
    </body>
</html>
