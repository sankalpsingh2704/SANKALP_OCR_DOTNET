    function refreshms() {
        $('.selectedBranch').multiselect({

            includeSelectAllOption: false,
            multiple: true,
            buttonWidth: '200px',
            buttonText: function (options) {
                if (options.length == 0) {
                    return '0 Selected';
                } else {
                    var selected = 0;
                    options.each(function () {
                        selected += 1;
                    });
                    return selected + 'Selected';
                }
            }

        });


    }

   
