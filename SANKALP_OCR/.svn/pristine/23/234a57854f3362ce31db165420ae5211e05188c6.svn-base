@model  IList<InvoiceNew.Models.UserRoleModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Submit", "UserRole", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                foreach (var m in Model)
                {
                    <div class="col-md-8">
                        <div class="form-group">
                            <div class="col-md-5">
                                @Html.DisplayFor(model => m.ID)
                                @Html.DisplayFor(model => m.UserType, new { @class = "control-label col-sm-4" })
                            </div>
                            <div class="col-md-3">
                                @*@Html.DropDownListFor(model => m.RoleId, m.UserRoles, "DEFAULT", new { Style = "width:100px;", @class = "dropdown" })*@
                                @Html.DropDownListFor(model => m.RoleId, new SelectList(ViewBag.Roles, "Value", "Text", m.RoleId), new { @class = "control-label dropdown" })
                            </div>
                        </div>
                    </div>
                }

            }
        </div>
    </div>
</div>